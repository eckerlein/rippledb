{
  "name": "@rippledb/zod",
  "version": "0.2.0",
  "license": "MIT",
  "description": "Zod schemas for runtime validation of RippleDB types",
  "private": false,
  "type": "module",
  "sideEffects": false,
  "keywords": [
    "rippledb",
    "zod",
    "validation",
    "schema",
    "sync",
    "crdt",
    "local-first",
    "offline-first"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/eckerlein/rippledb.git",
    "directory": "packages/zod"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "dependencies": {
    "@rippledb/core": "workspace:*"
  },
  "peerDependencies": {
    "zod": "^3.0.0"
  },
  "devDependencies": {
    "@rippledb/server": "workspace:*",
    "eslint": "^9.37.0",
    "tsup": "^8.5.0",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4",
    "zod": "^3.24.0"
  },
  "scripts": {
    "build": "tsup && tsc -p tsconfig.build.json",
    "test": "vitest run --pool=threads",
    "test:watch": "vitest --pool=threads",
    "lint": "eslint ."
  },
  "tsup": {
    "entry": [
      "src/index.ts"
    ],
    "format": [
      "esm"
    ],
    "dts": false,
    "sourcemap": true,
    "clean": true
  }
}
