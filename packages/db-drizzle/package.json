{
  "name": "@rippledb/db-drizzle",
  "version": "0.1.0",
  "private": false,
  "type": "module",
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": ["dist"],
  "dependencies": {
    "@rippledb/core": "workspace:*",
    "@rippledb/materialize-core": "workspace:*",
    "@rippledb/server": "workspace:*"
  },
  "peerDependencies": {
    "drizzle-orm": ">=0.36.0"
  },
  "devDependencies": {
    "@testcontainers/postgresql": "^10.25.0",
    "@types/better-sqlite3": "^7.6.9",
    "@types/pg": "^8.16.0",
    "better-sqlite3": "^12.4.1",
    "drizzle-orm": "^0.36.4",
    "eslint": "^9.37.0",
    "pg": "^8.14.1",
    "tsup": "^8.5.0",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4"
  },
  "scripts": {
    "build": "tsup && tsc -p tsconfig.build.json",
    "test": "vitest run --passWithNoTests",
    "test:watch": "vitest --passWithNoTests",
    "lint": "eslint ."
  },
  "tsup": {
    "entry": ["src/index.ts"],
    "format": ["esm"],
    "dts": false,
    "sourcemap": true,
    "clean": true
  }
}
