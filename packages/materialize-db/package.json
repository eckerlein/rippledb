{
  "name": "@rippledb/materialize-db",
  "version": "0.1.0",
  "private": false,
  "type": "module",
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": ["dist"],
  "dependencies": {
    "@rippledb/core": "workspace:*",
    "@rippledb/materialize-core": "workspace:*"
  },
  "devDependencies": {
    "@testcontainers/postgresql": "^11.10.0",
    "@types/better-sqlite3": "^7.6.11",
    "@types/pg": "^8.11.10",
    "better-sqlite3": "^11.7.0",
    "eslint": "^9.37.0",
    "pg": "^8.13.1",
    "tsup": "^8.5.0",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4"
  },
  "scripts": {
    "build": "tsup && tsc -p tsconfig.build.json",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint ."
  },
  "tsup": {
    "entry": ["src/index.ts"],
    "format": ["esm"],
    "dts": false,
    "sourcemap": true,
    "clean": true
  }
}
