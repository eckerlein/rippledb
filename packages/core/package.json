{
  "name": "@rippledb/core",
  "version": "0.2.0",
  "private": false,
  "type": "module",
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "devDependencies": {
    "eslint": "^9.37.0",
    "tsup": "^8.5.0",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4"
  },
  "scripts": {
    "build": "tsup && tsc -p tsconfig.build.json",
    "test": "vitest run --pool=threads",
    "test:watch": "vitest --pool=threads",
    "lint": "eslint ."
  },
  "tsup": {
    "entry": [
      "src/index.ts"
    ],
    "format": [
      "esm"
    ],
    "dts": false,
    "sourcemap": true,
    "clean": true
  }
}
