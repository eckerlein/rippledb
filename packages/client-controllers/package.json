{
  "name": "@rippledb/client-controllers",
  "version": "0.1.2",
  "private": false,
  "type": "module",
  "sideEffects": false,
  "description": "Abstract CRUD controllers with batch loading for RippleDB",
  "keywords": [
    "rippledb",
    "crud",
    "controllers",
    "batch-loader",
    "local-first",
    "offline-first"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/eckerlein/rippledb.git",
    "directory": "packages/client-controllers"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "dependencies": {
    "@rippledb/core": "workspace:*",
    "@rippledb/client": "workspace:*"
  },
  "devDependencies": {
    "@rippledb/store-memory": "workspace:*",
    "eslint": "^9.37.0",
    "tsup": "^8.5.0",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4"
  },
  "scripts": {
    "build": "tsup && tsc -p tsconfig.build.json",
    "test": "vitest run --passWithNoTests",
    "test:watch": "vitest --passWithNoTests",
    "lint": "eslint ."
  },
  "tsup": {
    "entry": [
      "src/index.ts"
    ],
    "format": [
      "esm"
    ],
    "dts": false,
    "sourcemap": true,
    "clean": true
  }
}
