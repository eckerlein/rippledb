{
  "$schema": "https://dprint.dev/schemas/v0.json",
  "incremental": true,
  "typescript": {
    "lineWidth": 80,
    "indentWidth": 2,
    "useTabs": false,
    "semiColons": "always",
    "quoteStyle": "preferDouble",
    "trailingCommas": "onlyMultiLine",
    "arrowFunction.useParentheses": "preferNone"
  },
  "json": {
    "lineWidth": 80,
    "indentWidth": 2,
    "useTabs": false
  },
  "markdown": {
    "lineWidth": 80,
    "textWrap": "always",
    "emphasisKind": "asterisks",
    "strongKind": "asterisks"
  },
  "includes": ["**/*.{ts,tsx,js,jsx,json,jsonc,md}"],
  "excludes": [
    "**/node_modules",
    "**/dist",
    "**/.next",
    "**/out",
    "**/.turbo",
    "**/pnpm-lock.yaml"
  ],
  "plugins": [
    "https://plugins.dprint.dev/typescript-0.88.4.wasm",
    "https://plugins.dprint.dev/json-0.19.2.wasm",
    "https://plugins.dprint.dev/markdown-0.17.2.wasm"
  ]
}
